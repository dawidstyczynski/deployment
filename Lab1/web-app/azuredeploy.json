{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "webAppName": {
            "type": "string",
            
            "defaultValue": "[concat('Node-',resourceGroup().name)]",
            "minLength":3,
            "maxLength":24,
            "metadata": {
                "description": "The name of the web app."
            }
        },
        "hositngPlanName": {
            "type": "string",
            "minLength":3,
            "maxLength":24,
            "defaultValue" :"[concat('Hpn-', resourceGroup().name)]",
            "metadata": {
                "description": "The name of the hosting plan."
            }
        },
        "sku-Code": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3",
                "P4"
            ],
            "metadata": {
                "description": "The pricing tier for hosting plan."
            }
        },
        "linuxFxVersion": {
            "type": "string",
            "defaultValue":"NODE|lts",
            "metadata": {
                "description": "The version of linux FX."
            }
        },
        "serverFarmType": {
            "type": "string",
            "defaultValue":"Linux",
            "metadata": {
                "description": "The type of server farm."
            }
        },
        "repoURL": {
            "type": "string",
            "defaultValue": "https://github.com/dawidstyczynski/myBasicWebapp.git",
            "metadata": {
                "description": "The URL for the GitHub repository."
            }
        },
        "branch": {
            "type": "string",
            "defaultValue": "master",
            "metadata": {
                "description": "The branch of the GitHub repository."
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('webAppName')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('hositngPlanName'))]"
            ],
            "properties": {
                "name": "[parameters('webAppName')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hositngPlanName'))]",
                "siteConfig": {
                    "linuxFxVersion": "[parameters('linuxFxVersion')]"
                }
            },
            "resources":[{      
                    "type": "sourcecontrols",
                    "apiVersion": "2020-12-01",
                    "name": "web",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
                    ],
                    "properties": {
                        "repoUrl": "[parameters('repoURL')]",
                        "branch": "[parameters('branch')]",
                        "isManualIntegration": true
                    }
                
            }]
        },
        {
            "apiVersion": "2020-12-01",
            "name": "[parameters('hositngPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "kind":"[parameters('serverFarmType')]",
            "sku": {
                "name": "[parameters('sku-Code')]"
            },
            "properties": {
                "reserved": true
            }
        } 
    ],
    "outputs": {}
}